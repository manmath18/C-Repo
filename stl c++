//selection sorting


#include <iostream>
#include<bits/stdc++.h>
using namespace std;

int main()
{
    //selection sorting
    int n=9;
    int a[9]={29,72,98,13,87,66,52,51,36};
    for(int i=0;i<n-1;i++){
        int min=i;
        for(int j=i+1;j<n;j++){
            if(a[j]<a[min])
            min=j;
        }
        swap(a[min],a[i]);
    }
    for(int i=0;i<n;i++){
        cout<<a[i]<<" ";
    }
    return 0;
}
