BOOK ALLOCATION

#include <iostream>

using namespace std;
bool ispossible(int a[],int n,int m,int mid){
    int  sc=1;
    int pgsum=0;
    for(int i=0;i<n;i++){
        if(pgsum+ a[i]<=mid){
            pgsum+=a[i];
        }
        else{
            sc++;
            if(sc>m || a[i]>mid){
                return false;
            }
            pgsum=a[i];
        }
    }
    return true;
}

int bookacc(int a[],int n,int m){
    int s=0,sum=0;
    for(int i=0;i<n;i++){
        sum=sum+a[i];
    }
    int e=sum,ans=-1;
    int mid=s+(e-s)/2;
    while(s<=e){
        if(ispossible(a,4,2,mid)){
            ans=mid;
            e=mid-1;
        }
        else {
            s=mid+1;
        }
        mid=s+(e-s)/2;
    }
return ans; 
}
int main()
{
    int s=0;
    int sum=0;
    int a[4]={10,20,30,40};
    int t=bookacc(a,4,2);
    cout<<t<<endl;
    return 0;
}
