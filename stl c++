    for (int i = 0; i < vec1.size(); i++)
    {
        cout << vec1[i] << " ";
    }
    cout << endl;
    vector<int> vec2(vec1.begin(), vec1.begin() + 3);
    for (int i = 0; i < vec2.size(); i++)
    {
        cout << vec2[i] << " ";
    }
    vec1.clear();
    vec1.push_back(2);
    for (int i = 0; i < vec1.size(); i++)
    {
        cout << vec1[i] << " ";
    }
    vector<vector<int>> vec;
    vector<int> r1;
    r1.push_back(1);
    r1.push_back(2);
    r1.push_back(3);
    vector<int> r2;
    r2.push_back(10);
    r2.push_back(20);

    vec.push_back(r1);
    vec.push_back(r2);

    for (auto vctr : vec)
    {
        for (auto it : vctr)
        {
            cout << it << " ";
        }
        cout << endl;
    }
    for (int i = 0; i < vec.size(); i++)
    {
        for (int j = 0; j < vec[i].size(); j++)
        {
            cout << vec[i][j] << " ";
        }
        cout << endl;
    }
    define 10*20 vector
    vector<vector<int>> vec(10, vector<int>(20, 0));
    for (int i = 0; i < vec.size(); i++)
