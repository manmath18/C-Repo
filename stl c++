//bubble sorting
#include <iostream>
#include<bits/stdc++.h>
using namespace std;

int main()
{
    //bubble sorting
    int n=7;
    int a[7]={10,34,2,67,22,5,56};
    for(int i=0;i<n-1;i++){
        int min=i;
        for(int j=i+1;j<n;j++){
            if(a[j]<a[i])
            swap(a[j],a[i]);
        }
    }
    for(int i=0;i<n;i++){
        cout<<a[i]<<" ";
    }
    return 0;
}
//another way


#include <iostream>
#include<bits/stdc++.h>
using namespace std;

int main()
{
    //bubble sorting
    int n=7;
    int a[7]={10,34,2,67,22,5,56};
    for(int i=1;i<n;i++){
        for(int j=0;j<n-i;j++){
            if(a[j]>a[j+1])
            swap(a[j],a[j+1]);
        }
    }
    for(int i=0;i<n;i++){
        cout<<a[i]<<" ";
    }
    return 0;
}
//optimised way with time complexity of O(n)
#include <iostream>
#include<bits/stdc++.h>
using namespace std;

int main()
{
    //bubble sorting by optimised way
    int n=7;
    int a[7]={10,34,2,67,22,5,56};
    for(int i=1;i<n;i++){
        bool swapped=false;
        for(int j=0;j<n-i;j++){
            if(a[j]>a[j+1])
            swap(a[j],a[j+1]);
            swapped=true;
        }
        if(swapped==false){
            break;
        }
    }
    for(int i=0;i<n;i++){
        cout<<a[i]<<" ";
    }
    return 0;
}
#################################################################################################
//insertion sorting
#include<iostream>
using namespace std;

int main()
{
    int n=6;
   int a[6]={7,64,45,23,2,43};
   for(int i=1;i<n;i++){
       int temp=a[i];
       int j=i-1;
       for(;j>=0;j--){
           if(a[j]>temp){
               a[j+1]=a[j];
           }
           else{
               break;
           }
       }
       a[j+1]=temp;
   }
   for(int i=0;i<n;i++){
       cout<<a[i]<<" ";
   }
    return 0;
}
